*
  padding: 0;
  margin: 0;
body, html, #app
  width: 100%;
  height: 100%;
input,button,select,textarea
  outline none
input, textarea, select
  border 1px solid #dfdfdf
  border-radius 2px
  padding 0 3px
textarea
  resize none
  padding 2px 3px
select
  height 29px
input
  line-height 30px
@font-face
  font-family: 'iconfont';  /* project id 1215617 */
  src: url('//at.alicdn.com/t/font_1215617_ntfqu5gi0pc.eot');
  src: url('//at.alicdn.com/t/font_1215617_ntfqu5gi0pc.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_1215617_ntfqu5gi0pc.woff2') format('woff2'),
  url('//at.alicdn.com/t/font_1215617_ntfqu5gi0pc.woff') format('woff'),
  url('//at.alicdn.com/t/font_1215617_ntfqu5gi0pc.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_1215617_ntfqu5gi0pc.svg#iconfont') format('svg');


.iconfont
  font-family "iconfont" !important
  font-size 16px;font-style normal
  -webkit-font-smoothing  antialiased
  -webkit-text-stroke-width  0.2px
  -moz-osx-font-smoothing  grayscale

.clearfix
  &:after
    content ''
    display block
    clear both
.dis-flex
  display flex
  .w-80
    width 80px
    text-align right
    padding-right 5px
  .flex
    flex 1
li
  list-style none

.todo-content
  height 100%
  background-color: #f5f5f5;
  display flex
.func-menu
  top 0
  left 0
  background #fff
  box-shadow 0px 1px 1px #ccc
  height 100%
  width 120px
  transition width 0.2s
  .li
    padding 0 10px
    line-height 50px
    cursor pointer
    border-bottom 1px solid #dfdfdf
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
  &.mode
    width 40px